@model Lexicon_Inlamning_01.Web.Models.RunningShoe

@{
    ViewBag.Title = "New Running Shoe";
}
<div style="margin: 50px;">
    <h2>Add Running Shoe</h2>

    <form asp-controller="RunningShoes" asp-action="Create" style="width: 350px;">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
                
        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>
        <br />
        <input type="submit" value="Add" />
        <div asp-validation-summary="All"></div>
    </form>

    

</div>
